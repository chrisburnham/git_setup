[user]
	name = Chris Burnham
	email = cburnham@greensea.com
[push]
	default = simple
[merge]
	tool = meld
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	df = difftool --dir-diff
	mg = merge --no-ff
[mergetool "meld"]
	cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED" > /dev/null 2>&1
[diff]
	tool = meld
[difftool]
	prompt = false
[difftool "meld"]
	cmd = meld "$LOCAL" "$REMOTE" > /dev/null 2>&1
[gc]
	auto = 1
